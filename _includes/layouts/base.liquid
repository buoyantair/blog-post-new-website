<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>
      {% if title %}
      {{ title }}
      {% else %}
      {{ site.title }}
      {% endif %}
    </title>
    <meta name="author" content="Alice Kile (buoyantair@protonmail.com)" />
    <meta name="description" content="{{ description }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.0.2/tailwind.min.css"
      integrity="sha512-+WF6UMXHki/uCy0vATJzyA9EmAcohIQuwpNz0qEO+5UeE5ibPejMRdFuARSrl1trs3skqie0rY/gNiolfaef5w=="
      crossorigin="anonymous"
    />
    <link href="{{ '/css/index.css' | url }}" rel="stylesheet" />
  </head>
  <body class="bg-gray-100">
    <!--[if lt IE 7]>
      <p class="browsehappy">
        You are using an <strong>outdated</strong> browser. Please
        <a href="#">upgrade your browser</a> to improve your experience.
      </p>
    <![endif]-->

    <!-- START Site header -->
    <header
      class="bg-white p-4 rounded-b-lg container mx-auto grid gap-4 grid-cols-2"
    >
      <!-- START Site header information -->
      <section>
        <h1 class="text-2xl">Alice Kile</h1>
        <p class="text-sm pt-2">Frontend Engineer</p>
      </section>
      <!-- END Site header information -->

      <!-- START Social media -->
      <section>
        <div class="flex flex-row justify-end">
          <img
            alt="Twitter"
            width="30px"
            src="{{ '/img/twitter.png' | url }}"
            class="mr-2"
          />
          <img alt="Github" width="30px" src="{{ '/img/github.png' | url }}" />
        </div>
      </section>
      <!-- END Social media -->
    </header>
    <!-- END Site header -->

    <main class="grid gap-4 mt-6">
      {{ content | safe }}
    </main>

    <footer
      class="bg-white p-4 rounded-t-lg container mx-auto text-center mt-6"
    >
      Â© Alice Kile
    </footer>
  </body>
</html>
